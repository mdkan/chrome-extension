{
  "manifest_version": 2,

  "name": "Plotly",
  "description": "Grab data from anywhere on the web to analyze in Plotly.",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": ["content.css"],
      "js": ["content.js"],
      "all_frames": true
    }
  ]
}
